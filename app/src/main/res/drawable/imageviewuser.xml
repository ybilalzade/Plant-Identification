<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_imageview_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:alpha="1">
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#000000"
                android:angle="45" /><!-- Shadow color -->
            <corners android:radius="50dp"/> <!-- Adjust the radius for the desired amount of curvature -->
        </shape>
    </item>
    <item android:right="10dp" android:left="10dp" android:bottom="10dp"  android:alpha="0.9" android:top="10dp">
        <shape>
            <solid android:color="#ffffff"/> <!-- Background color of the ImageView -->
            <corners android:radius="50dp"/> <!-- Same radius as the rounded shape -->
        </shape>
    </item>
</layer-list>

